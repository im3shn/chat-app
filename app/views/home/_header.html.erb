
  <h1>
    <%if user_signed_in? %>
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar.variant(:profile), class: "img-circle","width":"150", "height":"150"%>
      <% else %>
        <%= image_tag "default_profile.jpeg" ,"width":"150", "height":"150"%>
      <% end %>
      <%= User.full_name(current_user) %>
    <%end %>
  </h1>
  <span>
    <%if user_signed_in? %>
      <%=link_to 'Chat', root_path%>|
      <%=link_to 'Edit Profile', edit_user_registration_path %>|
      <%=link_to 'Sign Out', destroy_user_session_path, data: {turbo_confirm: 'Are you sure?',turbo_method: :delete} %>|
    <%else %>
      <%=link_to 'Sign Up', new_user_registration_path%>|
      <%=link_to 'Sign In', new_user_session_path%>
    <%end %>
</span>